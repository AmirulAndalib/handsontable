/* Welcome waving hand */
.waving-hand {
  width: 50px;
  height: 50px;
  position: relative;
  left: -4px;
  top: 10px;
}
  
/* A navigation element containing clickable fields (columns) */
.row-items-container {
  margin: 20px 0 30px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: flex-start;
  align-content: normal;
  flex-wrap: wrap;

  .row-item {
    width: calc(25% - 48px);
    margin: 0 6px;
    flex-grow: 1;
    flex-basis: auto;
    text-align: center;
    color: $textColor;
    border: 2px solid #e9eef2;
    border-radius: 8px;
    transition: all .15s ease;

    @media(max-width: $MQNarrow) {
      width: calc(50% - 28px);
      margin-bottom: 10px;
    }
    
    &:hover {
      text-decoration: none!important;
      box-shadow: 0 3px 12px #e9eef2;
    }
    
    img {
      margin-top: 14px;
      min-height: 55px;
    }
    
    h3 {
      font-size: 16px;
    }
  }
}
